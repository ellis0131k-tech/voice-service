[Unit]
Description=Qwen3-TTS Synthesis API (1.7B-CustomVoice, CUDA)
After=network.target

[Service]
Type=simple
User=%i
WorkingDirectory=/home/%i/voice-service/tts
ExecStart=/home/%i/.local/bin/uvicorn server:app --host 0.0.0.0 --port 8200
Restart=on-failure
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
